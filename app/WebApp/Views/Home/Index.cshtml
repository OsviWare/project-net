@model IEnumerable<WebApp.Models.Producto>
@{
    ViewData["Title"] = "Inicio";
}
<div class="container mt-4">

    <h3 class="mt-4">Productos recientes</h3>
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@(p.ImagenUrl ?? "/images/placeholder.png")" class="card-img-top" style="height:180px;object-fit:cover" />
                    <div class="card-body">
                        <h5 class="card-title">@p.Nombre</h5>
                        <p class="card-text">@p.Descripcion</p>
                        
                        <!-- Mostrar el nombre del usuario CON VERIFICACIÃ“N -->
                        @if (p.Usuario != null)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    Publicado por: @p.Usuario.Nombre
                                </small>
                            </p>
                        }
                        else
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    Publicado por: Usuario no disponible
                                </small>
                            </p>
                        }
                        
                        <p class="card-text"><strong>Bs. @p.Precio.ToString("F2")</strong></p>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("Details","Producto", new { id = p.Id })">Ver</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>