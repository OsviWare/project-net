
@model IEnumerable<WebApp.Models.Producto>
@{
    ViewData["Title"] = "Mis Productos";
}
<h2>Mis Productos</h2>
<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Nuevo producto</a>
</p>
<table class="table table-striped">
    <thead><tr><th>Nombre</th><th>Precio</th><th>Stock</th><th>Acciones</th></tr></thead>
    <tbody>
    @foreach(var p in Model)
    {
        <tr>
            <td>@p.Nombre</td>
            <td>@p.Precio.ToString("F2")</td>
            <td>@p.Stock</td>
            <td>
                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = p.Id })">Editar</a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = p.Id })">Ver</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = p.Id })">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
