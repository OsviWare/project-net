
@model WebApp.Models.Producto
@{
    ViewData["Title"] = "Detalle Producto";
}
<h2>@Model.Nombre</h2>
<div class="row">
    <div class="col-md-6">
        <img src="@(Model.ImagenUrl ?? "/images/placeholder.png")" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <h4>Bs. @Model.Precio.ToString("F2")</h4>
        <p>@Model.Descripcion</p>
        <p><strong>Stock:</strong> @Model.Stock</p>
        <p><strong>Vendedor:</strong> @Model.Usuario?.Nombre</p>
    </div>
</div>
<form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="productoId" value="@Model.Id" />
    <div class="mb-2">
        <label class="form-label">Cantidad</label>
        <input type="number" name="cantidad" value="1" min="1" max="@Model.Stock" class="form-control w-25" />
    </div>
    <button type="submit" class="btn btn-success">AÃ±adir al carrito</button>
    <a class="btn btn-secondary ms-2" href="@Url.Action("Index")">Volver</a>
</form>
