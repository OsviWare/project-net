
@model WebApp.Models.Producto
@{
    ViewData["Title"] = "Detalle Producto";
}
<h2>@Model.Nombre</h2>
<div class="row">
    <div class="col-md-6">
        <img src="@(Model.ImagenUrl ?? "/images/placeholder.png")" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <h4>Bs. @Model.Precio.ToString("F2")</h4>
        <p>@Model.Descripcion</p>
        <p><strong>Stock:</strong> @Model.Stock</p>
        <p><strong>Vendedor:</strong> @Model.Usuario?.Nombre</p>
    </div>
</div>
<a class="btn btn-secondary mt-3" href="@Url.Action("Index")">Volver</a>
