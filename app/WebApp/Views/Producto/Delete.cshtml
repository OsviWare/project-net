
@model WebApp.Models.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
}
<h2>Eliminar Producto</h2>
<div class="alert alert-warning">¿Está seguro que desea eliminar este producto?</div>
<dl class="row">
    <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Nombre</dd>
    <dt class="col-sm-3">Precio</dt><dd class="col-sm-9">@Model.Precio.ToString("F2")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" href="@Url.Action("Mine")">Cancelar</a>
</form>
