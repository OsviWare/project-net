@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">Panel de Administración</h1>
            <div class="alert alert-success" role="alert">
                <i class="fas fa-shield-alt"></i>
                ¡Bienvenido al panel de administración, @User.Identity.Name!
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Estadísticas de usuarios -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Usuarios</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas de productos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Productos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-boxes fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Productos activos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Productos Activos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveProducts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categorías -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Categorías</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCategories</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Gestión de usuarios -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Gestión de Usuarios</h6>
                </div>
                <div class="card-body">
                    <p>Administrar usuarios del sistema</p>
                    <a href="#" class="btn btn-primary">Ver Usuarios</a>
                    <a href="#" class="btn btn-success">Crear Usuario</a>
                </div>
            </div>
        </div>

        <!-- Gestión de productos -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Gestión de Productos</h6>
                </div>
                <div class="card-body">
                    <p>Administrar productos y categorías</p>
                    <a href="/Producto" class="btn btn-success">Ver Productos</a>
                    <a href="/Producto/Create" class="btn btn-primary">Crear Producto</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Configuración del sistema -->
        <div class="col-lg-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">Configuración del Sistema</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="#" class="btn btn-outline-primary btn-block mb-2">
                                <i class="fas fa-database"></i> Base de Datos
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="#" class="btn btn-outline-success btn-block mb-2">
                                <i class="fas fa-cogs"></i> Configuración
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="#" class="btn btn-outline-warning btn-block mb-2">
                                <i class="fas fa-chart-bar"></i> Reportes
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="#" class="btn btn-outline-danger btn-block mb-2">
                                <i class="fas fa-shield-alt"></i> Seguridad
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>