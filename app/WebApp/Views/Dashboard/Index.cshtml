@{
    ViewData["Title"] = "Dashboard Principal";
}

<div class="container-fluid">
    <h1>Dashboard Principal</h1>
    <p>Bienvenido, @User.Identity.Name!</p>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Panel de Administraci√≥n</h5>
                    <p class="card-text">Acceso exclusivo para administradores</p>
                    <a asp-controller="Dashboard" asp-action="AdminPanel" class="btn btn-primary">Acceder</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mis Productos</h5>
                    <p class="card-text">Gestiona tus productos para vender</p>
                    <a asp-controller="Dashboard" asp-action="MyProducts" class="btn btn-primary">Acceder</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mi Perfil</h5>
                    <p class="card-text">Ver y editar tu perfil</p>
                    <a asp-controller="Dashboard" asp-action="Profile" class="btn btn-primary">Acceder</a>
                </div>
            </div>
        </div>
    </div>
</div>