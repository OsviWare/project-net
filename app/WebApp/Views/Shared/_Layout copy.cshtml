@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.User.Identity?.IsAuthenticated ?? false;
    var userName = HttpContextAccessor.HttpContext?.User.Identity?.Name;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <!-- METADATOS DEL DOCUMENTO -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Descripción para motores de búsqueda -->
    <meta name="description" content="Plataforma de compra y venta de artículos nuevos y de segunda mano en Bolivia">
    <!-- Autor del sitio -->
    <meta name="author" content="E-commerce Bolivia">

    <!-- TÍTULO DE LA PÁGINA (dinámico con ASP.NET) -->
    <title>BoliviaMarket - @ViewData["Title"]</title>

    <!-- HOJAS DE ESTILO Y FUENTES -->
    <!-- Fuentes personalizadas de Font Awesome -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Fuente Google Nunito -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- ESTILOS CSS -->
    <!-- Tema SB Admin 2 -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- Estilos personalizados adicionales -->
    <link href="~/css/style.css" rel="stylesheet">
    <!-- Font Awesome desde CDN (respaldó) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">  
    
    <!-- SECCIÓN PARA ESTILOS ADICIONALES EN VISTAS ESPECÍFICAS -->
    @await RenderSectionAsync("Styles", required: false)
</head>

<body id="page-top">
    <!-- CONTENEDOR PRINCIPAL DE LA PÁGINA -->
    <div id="wrapper">
        
        <!-- BARRA LATERAL (SIDEBAR) -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            
            <!-- LOGO Y MARCA DE LA APLICACIÓN -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-recycle"></i>
                </div>
                <div class="sidebar-brand-text mx-2">BoliviaMarket</div>
            </a>

            <!-- SEPARADOR -->
            <hr class="sidebar-divider my-0">

            <!-- ELEMENTO DE NAVEGACIÓN - INICIO -->
            <li class="nav-item active">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Inicio</span>
                </a>
            </li>

            <!-- SEPARADOR -->
            <hr class="sidebar-divider">

            <!-- ENCABEZADO DE SECCIÓN - CATEGORÍAS -->
            <div class="sidebar-heading">
                Categorías
            </div>

            <!-- ELEMENTOS DE NAVEGACIÓN - CATEGORÍAS DE PRODUCTOS -->
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-tshirt"></i>
                    <span>Ropa y Accesorios</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-mobile-alt"></i>
                    <span>Tecnología</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-couch"></i>
                    <span>Hogar y Muebles</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-futbol"></i>
                    <span>Deportes</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-book"></i>
                    <span>Libros</span>
                </a>
            </li>

            <!-- SEPARADOR -->
            <hr class="sidebar-divider">

            <!-- ENCABEZADO DE SECCIÓN - MI CUENTA -->
            <div class="sidebar-heading">
                Mi Cuenta
            </div>

            <!-- ELEMENTOS DE NAVEGACIÓN - OPCIONES DE USUARIO -->
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-plus-circle"></i>
                    <span>Publicar Producto</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Producto/Index">
                    <i class="fas fa-store"></i>
                    <span>Mis Productos</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Mis Compras</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-heart"></i>
                    <span>Favoritos</span>
                </a>
            </li>

            <!-- SEPARADOR (solo visible en pantallas medianas y grandes) -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- BOTÓN PARA COLAPSAR/MOSTRAR LA BARRA LATERAL -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- FIN DE LA BARRA LATERAL -->

        <!-- CONTENEDOR DEL CONTENIDO PRINCIPAL -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- CONTENIDO PRINCIPAL -->
            <div id="content">
                
                <!-- BARRA SUPERIOR (TOP BAR) -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- BOTÓN PARA MOSTRAR/OCULTAR BARRA LATERAL EN DISPOSITIVOS PEQUEÑOS -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- BARRA DE BÚSQUEDA -->
                    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 w-50">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Buscar productos..." aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- ELEMENTOS DE LA BARRA SUPERIOR (lado derecho) -->
                    <ul class="navbar-nav ml-auto">
                        <!-- ELEMENTO - CARRITO DE COMPRAS -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="cartDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-shopping-cart fa-fw"></i>
                                <!-- CONTADOR DE PRODUCTOS EN EL CARRITO -->
                                <span class="badge badge-danger badge-counter">3</span>
                            </a>
                        </li>

                        <!-- ELEMENTO - NOTIFICACIONES/ALERTAS -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bell fa-fw"></i>
                                <!-- CONTADOR DE ALERTAS -->
                                <span class="badge badge-danger badge-counter">3</span>
                            </a>
                        </li>

                        <!-- SEPARADOR VERTICAL -->
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- ELEMENTO - INFORMACIÓN DE USUARIO Y MENÚ DESPLEGABLE -->

                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">@userName</span>
                                    <img class="img-profile rounded-circle" src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&auto=format&fit=crop&w=100&q=80">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                    <a class="dropdown-item" asp-controller="Dashboard" asp-action="Profile">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Perfil
                                    </a>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Configuración
                                    </a>
                                    <a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">
                                        <i class="fas fa-tachometer-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Dashboard
                                    </a>
                                    @if (User.IsInRole("administrador"))
                                    {
                                        <a class="dropdown-item" asp-controller="Dashboard" asp-action="AdminPanel">
                                            <i class="fas fa-lock fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Panel Admin
                                        </a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Cerrar Sesión
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>Iniciar Sesión</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i>
                                    <span>Registrarse</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- FIN DE LA BARRA SUPERIOR -->

                <!-- CONTENEDOR PRINCIPAL DEL CONTENIDO DINÁMICO -->
                <div class="container-fluid">
                    <!-- SECCIÓN DONDE SE CARGARÁ EL CONTENIDO ESPECÍFICO DE CADA VISTA -->
                    @RenderBody()
                </div>
            </div>
            <!-- FIN DEL CONTENIDO PRINCIPAL -->

        </div>
        <!-- FIN DEL CONTENEDOR DEL CONTENIDO PRINCIPAL -->
    </div>
    <!-- FIN DEL CONTENEDOR PRINCIPAL DE LA PÁGINA -->

    <!-- PIE DE PÁGINA (FOOTER) -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; BoliviaMarket 2025 - Desarrollado para impulsar la economía boliviana</span>
            </div>
        </div>
    </footer>
    <!-- FIN DEL PIE DE PÁGINA -->

    <!-- BOTÓN PARA DESPLAZARSE HACIA ARRIBA -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- SCRIPTS JAVASCRIPT -->
    <!-- jQuery -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Bundle -->
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Scripts personalizados de SB Admin 2 -->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- SECCIÓN PARA SCRIPTS ADICIONALES EN VISTAS ESPECÍFICAS -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>