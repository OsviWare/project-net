@model WebApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutAuth"; // Usaremos un layout diferente para auth
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">
                                    <i class="fas fa-recycle text-primary"></i> BoliviaMarket
                                </h1>
                                <p class="mb-4">Bienvenido de nuevo! Por favor inicia sesión en tu cuenta.</p>
                            </div>
                            
                            <form asp-action="Login" method="post" class="user">
                                @Html.AntiForgeryToken()
                                
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user" 
                                           placeholder="Ingresa tu email..." />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user" 
                                           placeholder="Contraseña" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" />
                                        <label class="custom-control-label" asp-for="RememberMe">Recordarme</label>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Iniciar Sesión
                                </button>
                            </form>
                            
                            <hr>
                            
                            <div class="text-center">
                                <a class="small" asp-action="Register">¿No tienes una cuenta? ¡Crea una!</a>
                            </div>
                            
                            <div class="text-center">
                                <a class="small" href="#">¿Olvidaste tu contraseña?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}