@model WebApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutAuth";
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-8 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">
                                    <i class="fas fa-sign-in-alt text-primary"></i> Iniciar Sesión en BoliviaMarket
                                </h1>
                            </div>

                            <form asp-action="Login" method="post" class="user">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <!-- Email -->
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user" 
                                           placeholder="Correo electrónico" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user" 
                                           placeholder="Contraseña" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <!-- Recordarme -->
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" class="custom-control-input" id="rememberMeCheck" />
                                        <label class="custom-control-label" for="rememberMeCheck">Recordarme</label>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Ingresar
                                </button>
                            </form>

                            <hr>

                            <div class="text-center">
                                <a class="small" asp-action="Register">¿No tienes una cuenta? ¡Regístrate aquí!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
